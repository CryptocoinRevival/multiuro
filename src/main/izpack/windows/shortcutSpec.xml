<shortcuts> 
   <programGroup defaultName="MultiUro" location="applications"/> 
   <shortcut name="MultiUro" 
             target="$INSTALL_PATH/multiuro.exe" 
             description="MultiUro" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multiuro.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall MultiUro ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MultiUro" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>